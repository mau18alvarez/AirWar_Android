<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cabine">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout3">

        <Button
            android:id="@+id/button_shoot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shoot2"
            android:scaleX="0.6"
            android:scaleY="0.5" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_boton1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="212dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/power1_buttonG"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/power0"
            android:scaleX="0.85"
            android:scaleY="0.85"
            android:visibility="visible"
            tools:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_boton3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="148dp"
        android:layout_toEndOf="@+id/layout_boton1">

        <Button
            android:id="@+id/power3_buttonG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="11dp"
            android:background="@drawable/bullet2"
            android:scaleX="0.85"
            android:scaleY="0.85" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_boton2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_toEndOf="@+id/layout_boton1">

        <Button
            android:id="@+id/power2_buttonG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bomb"
            android:scaleX="0.85"
            android:scaleY="0.85" />
    </RelativeLayout>

    <TextView
        android:id="@+id/badge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="285dp"
        android:background="@drawable/item_count"
        android:focusable="true"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded" />

    <TextView
        android:id="@+id/badge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="415dp"
        android:background="@drawable/item_count"
        android:focusable="false"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded" />

    <TextView
        android:id="@+id/badge3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="525dp"
        android:background="@drawable/item_count"
        android:focusable="false"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,RelativeOverlap,RtlHardcoded" />

</RelativeLayout>
